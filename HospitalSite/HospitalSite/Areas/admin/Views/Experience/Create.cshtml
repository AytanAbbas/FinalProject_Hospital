
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model WorkExperience

<div class="row mt-3">
    <div class="col-lg-6" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Create </div>
                <hr>
                <form class="p-5" asp-area="admin" asp-controller="Experience" asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="@Model.Icon" class="form-label">Icon</label>
                        <input class="form-control" rows="4" asp-for="@Model.Icon" placeholder="Write a Icon..." />
                        <span class="text-warning" asp-validation-for="@Model.Icon"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Title" class="form-label">Title</label>
                        <input class="form-control" rows="4" asp-for="@Model.Title" placeholder="Write a Title..." />
                        <span class="text-warning" asp-validation-for="@Model.Title"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.About" class="form-label">About</label>
                        <input class="form-control" rows="4" asp-for="@Model.About" placeholder="Write a About..." />
                        <span class="text-warning" asp-validation-for="@Model.About"></span>
                    </div>
                    <button type="submit" class="btn btn-light col-lg-6 mt-4 offset-6">Create</button>
                    <a asp-area="admin" asp-controller="Experience" asp-action="Index">Back to list</a>
                </form>
            </div>
        </div>
    </div>
</div>

