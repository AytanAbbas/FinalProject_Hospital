
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model Service

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Update A New Service</div>
                <hr>
                @{ if (TempData["ServiceError"] != null)
                    {
                        <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["ServiceError"]</p> TempData["ServiceError"] = null;
                    } }
            <form class="row p-5" asp-area="Admin" asp-controller="Service" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="col-lg-12">
                    <label asp-for="@Model.ImageFile" class="form-label"> Document Upload</label>
                    <input class="form-control" type="file" asp-for="@Model.ImageFile" id="formFileMultiple" multiple required>
                    <span class="text-warning" asp-validation-for="@Model.ImageFile"></span>

                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <input class="form-control" asp-for="@Model.Content" placeholder="Content">
                    <span class="text-warning" asp-validation-for="@Model.Content"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Phone" class="form-label">Phone</label>
                    <input class="form-control" asp-for="@Model.Phone" placeholder="Phone">
                    <span class="text-warning" asp-validation-for="@Model.Phone"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Experience" class="form-label">Experience</label>
                    <input class="form-control" asp-for="@Model.Experience" placeholder="Experience">
                    <span class="text-warning" asp-validation-for="@Model.Experience"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title" placeholder="Title">
                    <span class="text-warning" asp-validation-for="@Model.Title"></span>
                </div>


                <button type="submit" style=" position: relative !important; left: -13px !important;" class="btn btn-light px-5 col-lg-6 mt-4 offset-6">Update</button>
            </form>
            </div>
        </div>
    </div>
</div>

