
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model TeamSocial

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Create A New Social</div>
                <hr>
                <form class="p-5" asp-area="admin" asp-controller="TeamSocial" asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="@Model.Name" class="form-label">Social Name</label>
                        <input class="form-control" asp-for="@Model.Name">
                        <span class="text-warning" asp-validation-for="@Model.Name"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Icon" class="form-label">Social Icon</label>
                        <input class="form-control" asp-for="@Model.Icon">
                        <span class="text-warning" asp-validation-for="@Model.Icon"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Link" class="form-label">Social Link</label>
                        <input class="form-control" asp-for="@Model.Link">
                        <span class="text-warning" asp-validation-for="@Model.Link"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.TeamId" class="form-label" style=" margin-left: 38%;"> Doctor</label>
                        <select class="form-control mb-3" aria-label="Default select example" asp-for="@Model.TeamId">
                            <option selected>Doctor </option>
                            @foreach (var item in ViewBag.Team)
                            {
                                <option value="@item.Id">@item.Fullname</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.TeamId" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-light col-lg-6 mt-4 offset-6">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>


