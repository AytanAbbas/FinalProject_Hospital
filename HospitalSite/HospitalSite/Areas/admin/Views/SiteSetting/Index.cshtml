
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


@model Setting


<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title my-4" style="font-size: 30px !important; text-align: center !important;">Settings</h5>
                <div class="table-responsive">
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr style="text-align: center !important">
                                <th scope="col">#</th>
                                <th scope="col">Logo</th>
                                <th scope="col">Footer Background</th>
                                <th scope="col">Signature</th>
                                <th scope="col">Phone1</th>
                                <th scope="col">Phone2</th>
                                <th scope="col">Email1</th>
                                <th scope="col">Email2</th>
                                <th scope="col">Address</th>
                                <th scope="col">Info</th>
                                <th scope="col">About</th>
                                <th scope="col">AboutImage</th>
                                <th scope="col">FounderName</th>
                                <th scope="col">FounderPosition</th>
                                <th scope="col">WorkHpurs</th>
                                <th scope="col">MapLink</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th class="align-middle" scope="row">1</th>
                                <td class="align-middle" style="width: 150px !important; height: 150px !important;">
                                    <img style="width: 100% !important; height: 100% !important; object-fit: contain !important;" src="~/img/logo/@Model.Logo" alt="Alternate Text" />
                                </td>
                                <td class="align-middle" style="width: 150px !important; height: 150px !important;">
                                    <img style="width: 100% !important; height: 100% !important; object-fit: contain !important;" src="~/img/bg-image/@Model.FooterBgImage" alt="Alternate Text" />
                                </td>
                                <td class="align-middle">@Model.Signature</td>
                                <td class="align-middle">@Model.Phone1</td>
                                <td class="align-middle">@Model.Phone2</td>
                                <td class="align-middle">@Model.Email1</td>
                                <td class="align-middle">@Model.Email2</td>
                                <td class="align-middle">
                                    <marquee behavior="scroll" direction="up" height="135"
                                             scrollamount="2" scrolldelay="10" style="width: 150px !important;">
                                        @Model.Address
                                    </marquee>
                                </td>
                                <td class="align-middle">
                                    <marquee behavior="scroll" direction="up" height="auto"
                                             scrollamount="2" scrolldelay="10">
                                        @Model.Info
                                    </marquee>
                                </td>
                                <td class="align-middle">
                                    <marquee behavior="scroll" direction="up" height="auto"
                                             scrollamount="2" scrolldelay="10">
                                        @Model.About
                                    </marquee>
                                </td>
                                <td class="align-middle" style="width: 150px !important; height: 150px !important;">
                                    <img style="width: 100% !important; height: 100% !important; object-fit: contain !important;" src="~/img/bg-image/@Model.AboutImage" alt="Alternate Text" />
                                </td>
                                <td class="align-middle">@Model.Foundername</td>
                                <td class="align-middle">@Model.Founderposition</td>
                                <td class="align-middle">@Model.WorkHours</td>
                                <td class="align-middle">@Model.MapLink</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <a asp-area="admin" asp-controller="SiteSetting" asp-action="Update" style="width: 150px !important; margin-left: auto !important; margin-right: 20px !important; margin-bottom: 40px !important; font-size: 16px !important;" class="btn btn-sm btn-light">Update</a>
        </div>
    </div>
</div>

