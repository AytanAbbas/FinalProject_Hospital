
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model Achievement

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Create A New Achievement</div>
                <hr>
                @{ if (TempData["AchievementError"] != null)
                    {
                        <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["AchievementError"]</p> TempData["AchievementError"] = null;
                    } }
                <form class="row p-5" asp-area="Admin" asp-controller="Achievement" asp-action="Create" method="post" enctype="multipart/form-data">                
                    <div class="col-lg-12 my-3">
                        <label class="w-100 btn btn-outline-white" asp-for="@Model.ImageFile">Choose Achievement Image</label>
                        <input class="d-none form-control w-50" asp-for="@Model.ImageFile">
                        <span class="text-warning" asp-validation-for="@Model.ImageFile"></span>
                    </div>

                    <button type="submit" style=" position: relative !important; left: -13px !important;" class="btn btn-light px-5 col-lg-6 mt-4 offset-6">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>



