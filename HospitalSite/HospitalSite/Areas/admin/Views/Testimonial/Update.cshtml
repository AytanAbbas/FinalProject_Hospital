
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model Testimonial


<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Update A Testimonial</div>
                <hr>
                @{ if (TempData["TestimonialError3"] != null)
                                {
                    <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["TestimonialError3"]</p> TempData["TestimonialError3"] = null;
                                } }
            <form class="row p-5" asp-area="Admin" asp-controller="Testimonial" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="col-lg-12 my-3">
                    <label class="w-100 btn btn-outline-white" asp-for="@Model.ImageFile">Choose Testimonial Image</label>
                    <input class="d-none form-control w-50" asp-for="@Model.ImageFile">
                    <span class="text-warning" asp-validation-for="@Model.ImageFile"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Quote" class="form-label">Quote</label>
                    <input class="form-control" asp-for="@Model.Quote" placeholder="Quote">
                    <span class="text-warning" asp-validation-for="@Model.Quote"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Description" class="form-label">Description</label>
                    <input class="form-control" asp-for="@Model.Description" placeholder="Description">
                    <span class="text-warning" asp-validation-for="@Model.Description"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Fullname" class="form-label">Fullname</label>
                    <input class="form-control" asp-for="@Model.Fullname" placeholder="Fullname">
                    <span class="text-warning" asp-validation-for="@Model.Fullname"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Profession" class="form-label">Profession</label>
                    <input class="form-control" asp-for="@Model.Profession" placeholder="Profession">
                    <span class="text-warning" asp-validation-for="@Model.Profession"></span>
                </div>

                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.Image" />
                <button type="submit" style=" position: relative !important; left: -13px !important;" class="btn btn-light px-5 col-lg-6 mt-4 offset-6">Save Changes</button>
            </form>
            </div>
        </div>
    </div>
</div>


