
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model ResearchImage
<div class="body d-flex py-3">
    <div class="container-xxl">
        <div class="row align-items-center">
            <div class="border-0 mb-4">
                <div class="card-header py-3 no-bg bg-transparent d-flex align-items-center px-0 justify-content-between border-bottom flex-wrap">
                    <h3 class="fw-bold mb-0">Add Research Image</h3>
                </div>
            </div>
        </div> <!-- Row end  -->
        <div class="row mb-3">
            <div class="col-sm-12">
                <div class="card mb-3">

                    <div class="card-body">
                        <form class="row p-5" asp-area="admin" asp-controller="ResearchImage" asp-action="Update" method="post" enctype="multipart/form-data">
                            <div class="row g-3 align-items-center">

                                <div class="col-md-6">
                                    <label asp-for="@Model.ImageFile" class="form-label"> Document Upload</label>
                                    <input class="form-control" type="file" asp-for="@Model.ImageFile" id="formFileMultiple" multiple required>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="@Model.ResearchId" class="form-label" style=" margin-left: 38%;"> Research</label>
                                    <select class="form-control mb-3" aria-label="Default select example" asp-for="@Model.ResearchId">
                                        <option selected>Category </option>
                                        @foreach (var item in ViewBag.Research)
                                        {
                                            <option value="@item.Id">@item.Title</option>
                                        }
                                    </select>
                                    <span asp-validation-for="@Model.ResearchId" class="text-danger"></span>
                                </div>

                            </div>

                            <button type="submit" class="btn btn-primary mt-4">Update</button>
                            <a asp-area="Admin" asp-controller="ResearchImage" asp-action="Index">Back to list</a>

                        </form>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

