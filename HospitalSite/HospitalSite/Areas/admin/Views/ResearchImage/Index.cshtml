
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model List<ResearchImage>
<div class="body d-flex py-3">
    <div class="container-xxl">
        <div class="row align-items-center">
            <div class="border-0 mb-4">
                <div class="card-header py-3 no-bg bg-transparent d-flex align-items-center px-0 justify-content-between border-bottom flex-wrap">
                    <h3 class="fw-bold mb-0">Research Images </h3>
                    <a class="btn btn-light mb-3 px-4" style="background: #6aab9c; color: white" asp-area="admin" asp-controller="ResearchImage" asp-action="Create">Add A New Image</a>

                </div>
            </div>
        </div> <!-- Row end  -->
        <div class="row g-3 row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4 row-cols-xl-4 row-cols-xxl-4 row-deck py-1 pb-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card teacher-card ">
                        <div class="card-body d-flex flex-column">
                            <div class="profile-av mx-auto text-center w220">
                                <img src="~/Uploads/@item.Image" alt="" class="avatar xl rounded-circle img-thumbnail shadow-sm">

                                <div class="about-info d-flex align-items-center mt-3 justify-content-center">

                                    <div class="followers rounded-circle me-3">
                                        <a href="#">
                                            <i class="bi bi-facebook fs-5 text-blue"></i>
                                        </a>
                                    </div>
                                    <div class="own-video rounded-circle me-3">
                                        <a href="#">
                                            <i class="bi bi-instagram fs-5 text-danger"></i>
                                        </a>
                                    </div>
                                    <div class="star rounded-circle ">
                                        <a href="#">
                                            <i class="bi bi-linkedin fs-5 text-blue"></i>
                                        </a>
                                    </div>

                                </div>
                            </div>
                            <div class="teacher-info  w-100 text-center mt-3">
                                <span class="light-info-bg py-2 px-2 rounded-1 d-inline-block fw-bold small-11 mb-0 mt-1">@item.Research.Title</span>

                            </div>
                            <div style=" text-align: center;">
                                <a style=" margin-top: 13px; width: 45px;" data-tippy="Update" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder" class="mr-2 btn-sm btn btn-outline-success" asp-route-id="@item.Id" asp-area="Admin" asp-controller="ResearchImage" asp-action="Update"><i class="fal fa-edit"></i></a>
                                <a style=" margin-top: 13px; width: 45px;" data-tippy="Delete" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder" class="btn-sm btn btn-outline-danger" asp-route-id="@item.Id" asp-area="Admin" asp-controller="ResearchImage" asp-action="Delete" onclick="return confirm('Are you sure?')"><i class="fal fa-trash-alt"></i></a>
                            </div>
                            
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>

