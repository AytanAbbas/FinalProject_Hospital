
@{
    ViewData["Title"] = "ResearchDetail";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model VmResearch
<div class="body d-flex py-3">
    <div class="container-xxl">

        <div class="row g-3">
            <div class="col-xl-12 col-lg-12 col-md-12">
                <div class="card teacher-card  mb-3">
                    <div class="card-body d-flex teacher-fulldeatil">
                        <div class="profile-teacher pe-xl-4 pe-md-2 pe-sm-4 pe-4 text-center w220">
                            <a href="#">
                                <img src="~/Uploads/@Model.ResearchDetail.MainImage" alt="" class="avatar xl rounded-circle img-thumbnail shadow-sm">
                            </a>
                            <div class="about-info d-flex align-items-center mt-3 justify-content-center flex-column">
                                <span class="text-muted small">@Model.ResearchDetail.Client</span>
                            </div>

                        </div>
                        <div class="teacher-info border-start ps-xl-4 ps-md-4 ps-sm-4 ps-4 w-100">
                            <h6 class="mb-0 mt-2  fw-bold d-block fs-6">@Model.ResearchDetail.Title</h6>
                            <span class="py-1 fw-bold small-11 mb-0 mt-1 text-muted">@Model.ResearchDetail.Location</span>
                            <p class="mt-2"><span style=" font-weight: 800;">DETAILS:</span>
                            @Model.ResearchDetail.Details</p>
                            <p class="mt-2"><span style=" font-weight: 800;">ADVANTAGES:</span>
                            @Model.ResearchDetail.Advantages</p>

                            <div class="row g-2 pt-2">
                               
                                <div class="col-xl-5">
                                    <div class="d-flex align-items-center">
                                        <i class="icofont-ui-calendar"></i>
                                        <span class="ms-2">@Model.ResearchDetail.CreatedDate.ToString("dd/ MMMM /yyy") </span>
                                    </div>
                                    <br />
                                    <div class="d-flex align-items-center">
                                        <i class="icofont-sort"></i>
                                        <span class="ms-2">@Model.ResearchDetail.Category.Name</span>
                                    </div>
                                </div>
                                
                                <a href="#">
                                    <img src="~/Uploads/@Model.ResearchDetail.DetailImage" alt="" class="avatar xl rounded-circle img-thumbnail shadow-sm">
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- Row End -->
        <a class="btn btn-light mb-3 px-4" style="background: #6aab9c; color: white" asp-area="admin" asp-controller="Research" asp-action="Create">Add A New Research</a>
        <a class="btn btn-light mb-3 px-4  btn-success" style=" color: white" asp-area="Admin" asp-controller="Research" asp-action="Update" asp-route-id="@Model.ResearchDetail.Id">Update</a>
        <a class="btn btn-light mb-3 px-4 btn-danger" style=" color: white" asp-area="Admin" asp-controller="Research" asp-action="Delete" asp-route-id="@Model.ResearchDetail.Id" onclick="return confirm('Are you sure?')">Delete</a>



    </div>

</div>

