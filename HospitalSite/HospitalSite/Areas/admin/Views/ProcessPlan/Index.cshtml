
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model List<ProcessPlan>


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center" style="font-size: 30px !important;">ProcessPlan</h4>
                @{ if (TempData["ProcessPlanError2"] != null)
                                {
                    <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["ProcessPlanError2"]</p> TempData["ProcessPlanError2"] = null;
                                } }
            <a class="btn btn-light mb-3 px-5" asp-area="admin" asp-controller="ProcessPlan" asp-action="Create">Add A New ProcessPlan</a>
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th class="tableTrCustom">
                                    #
                                </th>
                                <th class="tableTrCustom">
                                    Title
                                </th>
                                <th class="tableTrCustom">
                                    Icon
                                </th>
                                <th class="tableTrCustom">
                                    Number
                                </th>
                                <th class="tableTrCustom">
                                    Content
                                </th>
                                <th class="tableTrCustom">
                                    ArrowImage
                                </th>
                                <th class="tableTrCustom">
                                    Edit
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int counter = 0;
                                            foreach (var item in Model)
                                            {
                                                counter++;
                                                        <tr>
                                                            <td style="vertical-align: middle !important; font-size: 18px !important; font-weight: 500 !important;">
                                                                @counter
                                                            </td>

                                                            <td style="vertical-align: middle !important; width: 250px !important; font-size: 18px !important; font-weight: 500 !important;">
                                                                @item.Title
                                                            </td>
                                                            <td style="vertical-align: middle !important; font-size: 18px !important; font-weight: 500 !important;">
                                                                @item.Icon
                                                            </td>
                                                            <td style="vertical-align: middle !important; font-size: 18px !important; font-weight: 500 !important;">
                                                                @item.Number
                                                            </td>
                                                            <td style="vertical-align: middle !important; font-size: 18px !important; font-weight: 500 !important;">
                                                                @(item.Content != null && item.Content.Length > 20 ? item.Content.Substring(0, 20) + "..." : item.Content)

                                                            </td>
                                                            <td class="py-1" style="vertical-align: middle !important; width: 300px !important; height: 100px !important;">
                                                                <img style="border-radius: unset !important; width: 100% !important; height: 100% !important; object-fit: contain !important;" src="~/Uploads/@item.ArrowImage" alt="image" />
                                                            </td>
                                                            <td style="width: 16% !important; vertical-align: middle !important;">
                                                                <a data-tippy="Update" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder" class="mr-2 btn-sm btn btn-outline-success" asp-route-id="@item.Id" asp-area="Admin" asp-controller="ProcessPlan" asp-action="Update"><i class="fal fa-edit"></i></a>
                                                                <a data-tippy="Delete" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder" class="btn-sm btn btn-outline-danger" asp-route-id="@item.Id" asp-area="Admin" asp-controller="ProcessPlan" asp-action="Delete" onclick="return confirm('Are you sure?')"><i class="fal fa-trash-alt"></i></a>
                                                            </td>
                                                        </tr>
                                            }
                                             }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


