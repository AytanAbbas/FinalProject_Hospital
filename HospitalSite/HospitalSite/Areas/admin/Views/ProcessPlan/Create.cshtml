
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model ProcessPlan

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Create A New ProcessPlan</div>
                <hr>
                @{ if (TempData["ProcessPlanError"] != null)
                                {
                    <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["ProcessPlanError"]</p> TempData["ProcessPlanError"] = null;
                                } }
            <form class="row p-5" asp-area="Admin" asp-controller="ProcessPlan" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title" placeholder="Title">
                    <span class="text-warning" asp-validation-for="@Model.Title"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Icon" class="form-label">Icon</label>
                    <input class="form-control" asp-for="@Model.Icon" placeholder="Icon">
                    <span class="text-warning" asp-validation-for="@Model.Icon"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Number" class="form-label">Number</label>
                    <input class="form-control" asp-for="@Model.Number" placeholder="Number">
                    <span class="text-warning" asp-validation-for="@Model.Number"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <input class="form-control" asp-for="@Model.Content" placeholder="Content">
                    <span class="text-warning" asp-validation-for="@Model.Content"></span>
                </div>
                <div class="col-lg-12 my-3">
                    <label class="w-100 btn btn-outline-white" asp-for="@Model.ArrowImageFile">Choose ArrowImage</label>
                    <input class="d-none form-control w-50" asp-for="@Model.ArrowImageFile">
                    <span class="text-warning" asp-validation-for="@Model.ArrowImageFile"></span>
                </div>

                <button type="submit" style=" position: relative !important; left: -13px !important;" class="btn btn-light px-5 col-lg-6 mt-4 offset-6">Create</button>
            </form>
            </div>
        </div>
    </div>
</div>

