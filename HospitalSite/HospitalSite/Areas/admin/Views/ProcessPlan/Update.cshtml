
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model ProcessPlan

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Update ProcessPlan</div>
                <hr>
                @{ if (TempData["ProcessPlanError3"] != null)
                                {
                    <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["ProcessPlanError3"]</p> TempData["ProcessPlanError3"] = null;
                                } }
            <form class="row p-5" asp-area="Admin" asp-controller="ProcessPlan" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title" placeholder="Title">
                    <span class="text-warning" asp-validation-for="@Model.Title"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Icon" class="form-label">Icon</label>
                    <input class="form-control" asp-for="@Model.Icon" placeholder="Icon">
                    <span class="text-warning" asp-validation-for="@Model.Icon"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Number" class="form-label">Number</label>
                    <input class="form-control" asp-for="@Model.Number" placeholder="Number">
                    <span class="text-warning" asp-validation-for="@Model.Number"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <input class="form-control" asp-for="@Model.Content" placeholder="Content">
                    <span class="text-warning" asp-validation-for="@Model.Content"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.ArrowImageFile" class="form-label"> Document Upload</label>
                    <input class="form-control" type="file" asp-for="@Model.ArrowImageFile" id="formFileMultiple" multiple required>
                    <span class="text-warning" asp-validation-for="@Model.ArrowImageFile"></span>

                </div>
                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.ArrowImage" />
                <button type="submit" style=" position: relative !important; left: -13px !important;" class="btn btn-light px-5 col-lg-6 mt-4 offset-6">Save Changes</button>
            </form>
            </div>
        </div>
    </div>
</div>


