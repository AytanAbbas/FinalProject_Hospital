
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model WorkProcess

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Create A New WorkProcess</div>
                <hr>
                @{ if (TempData["WorkProcessError"] != null)
                    {
                        <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["WorkProcessError"]</p> TempData["WorkProcessError"] = null;
                    } }
            <form class="row p-5" asp-area="Admin" asp-controller="WorkProcess" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="col-md-6">
                    <label asp-for="@Model.BgImageFile" class="form-label"> Document Upload</label>
                    <input class="form-control" type="file" asp-for="@Model.BgImageFile" id="formFileMultiple" multiple required>
                    <span class="text-warning" asp-validation-for="@Model.BgImageFile"></span>

                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.About" class="form-label">About</label>
                    <input class="form-control" asp-for="@Model.About" placeholder="About">
                    <span class="text-warning" asp-validation-for="@Model.About"></span>
                </div>


                <button type="submit" style=" position: relative !important; left: -13px !important;" class="btn btn-light px-5 col-lg-6 mt-4 offset-6">Create</button>
            </form>
            </div>
        </div>
    </div>
</div>

