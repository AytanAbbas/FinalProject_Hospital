
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model List<Banner>


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center" style="font-size: 30px !important;">Banner</h4>
                @{ if (TempData["BannerError"] != null)
                                {
                    <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["BannerError"]</p> TempData["BannerError2"] = null;
                                } }
                <a class="btn btn-light mb-3 px-5" asp-area="admin" asp-controller="Banner" asp-action="Create">Add A New Banner</a>
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th class="tableTrCustom">
                                    #
                                </th>
                               
                                <th class="tableTrCustom">
                                    Title
                                </th>
                                <th class="tableTrCustom">
                                    SubTitle
                                </th>
                                <th class="tableTrCustom">
                                    Page
                                </th>
                                <th class="tableTrCustom">
                                    Edit
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int counter = 0;
                                            foreach (var item in Model)
                                            {
                                                counter++;
                                                        <tr>
                                                            <td style="vertical-align: middle !important; font-size: 18px !important; font-weight: 500 !important;">
                                                                @counter
                                                            </td>

                                                            <td style="vertical-align: middle !important; width: 250px !important; font-size: 18px !important; font-weight: 500 !important;">
                                                                @item.Title
                                                            </td>
                                                            <td style="vertical-align: middle !important; width: 250px !important; font-size: 18px !important; font-weight: 500 !important;">
                                                                @item.SubTitle
                                                            </td>
                                                            <td style="vertical-align: middle !important; font-size: 18px !important; font-weight: 500 !important;">
                                                                @item.Page
                                                            </td>
                                                            <td style="width: 16% !important; vertical-align: middle !important;">
                                                                <a data-tippy="Update" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder" class="mr-2 btn-sm btn btn-outline-success" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Banner" asp-action="Update"><i class="fal fa-edit"></i></a>
                                                                <a data-tippy="Delete" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder" class="btn-sm btn btn-outline-danger" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Banner" asp-action="Delete" onclick="return confirm('Are you sure?')"><i class="fal fa-trash-alt"></i></a>
                                                            </td>
                                                        </tr> } }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


