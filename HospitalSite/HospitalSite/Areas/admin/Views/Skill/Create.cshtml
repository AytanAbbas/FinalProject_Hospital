
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model Skill

<div class="row mt-3">
    <div class="col-lg-6" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Create A New Skill</div>
                <hr>
                <form class="p-5" asp-area="Admin" asp-controller="Skill" asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="@Model.Name" class="form-label">Name</label>
                        <input class="form-control" rows="4" asp-for="@Model.Name" placeholder="Write a skill..." />
                        <span class="text-warning" asp-validation-for="@Model.Name"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Percent" class="form-label">Percent</label>
                        <input class="form-control" rows="4" asp-for="@Model.Percent" placeholder="Write a percent..." />
                        <span class="text-warning" asp-validation-for="@Model.Percent"></span>
                    </div>
                    <button type="submit" class="btn btn-light col-lg-6 mt-4 offset-6">Create</button>
                    <a asp-area="admin" asp-controller="Skill" asp-action="Index">Back to list</a>
                </form>
            </div>
        </div>
    </div>
</div>
