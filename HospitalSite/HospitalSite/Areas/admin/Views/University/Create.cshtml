
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@model University

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Create A New University</div>
                <hr>
                <form class="p-5" asp-area="admin" asp-controller="University" asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="@Model.Medical" class="form-label">Medical </label>
                        <input class="form-control" asp-for="@Model.Medical">
                        <span class="text-warning" asp-validation-for="@Model.Medical"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Residency" class="form-label">Residency</label>
                        <input class="form-control" asp-for="@Model.Residency">
                        <span class="text-warning" asp-validation-for="@Model.Residency"></span>
                    </div>
                    <button type="submit" class="btn btn-light col-lg-6 mt-4 offset-6">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>

