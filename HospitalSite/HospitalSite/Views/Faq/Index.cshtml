
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model VmFaq

<main>
    <div class="banner" style="background-image: url(images/background/@Model.Banner.Image);">
        <div class="banner-inner">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <div class="page-title-heading">
                            <h2 class="title">@Model.Banner.Title</h2>
                        </div>
                        <div class="breadcrumb-wrapper">
                            <span>
                                <a title="Homepage" href="index.html">Home</a>
                            </span>
                            <span>@Model.Banner.SubTitle</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="faq">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="mb-30">
                        <div class="section-title">
                            <div class="title-header">
                                <h2 class="title">Frequently Asked Questions</h2>
                            </div>
                            <div class="title-desc">
                                Below you’ll find answers to some of the most frequently asked questions at Tectxon. We are constantly adding most asked question to this page so if you have a question and don’t see your answer, don’t hesitate to email
                                us at <a href="#">info@example.com</a>
                            </div>
                        </div>
                    </div>
                    <div class="accordion">
                        @foreach (var item in Model.Faqs)
                        {
                        <div class="toggle ttm-style-classic ttm-toggle-title-bgcolor-grey ttm-control-right-true">
                            <div class="toggle-title"><a href="#">@item.Question</a></div>
                            <div class="toggle-content">
                                <p>@item.Answer</p>
                            </div>
                        </div>
                        }
                   

                    </div>
                </div>
                <div class="col-lg-4 col-md-5">
                    <div class="question pt-25 pr-30 pb-30 pl-30 res-991-mt-30">
                        <div class="question-bg-layer"></div>
                        <div class="question-content">
                            <div class="section-title">
                                <div class="title-header">
                                    <h2 class="title">Submit Question</h2>
                                </div>
                                <div class="title-desc">Fill all information details to consult with our best Attorneys</div>
                            </div>

                            <form class="question-form clearfix" method="post" action="#">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <label class="input-label" style="width: 100%; margin-bottom: 30px;">
                                            <span class="text-input"><input name="your-name" type="text" value="" placeholder="Your Name" required="required"></span>
                                        </label>
                                        <label style="width: 100%; margin-bottom: 30px;">
                                            <span class="text-input"><input name="email" type="email" value="" placeholder="Email" required="required"></span>
                                        </label>
                                        <label style="width: 100%; margin-bottom: 30px;">
                                            <span class="text-input"><input name="phone" type="text" value="" placeholder="Phone Number" required="required"></span>
                                        </label>
                                        <label style="width: 100%; margin-bottom: 30px;">
                                            <span class="text-input"><textarea name="message" rows="4" cols="40" placeholder="Message" required="required"></textarea></span>
                                        </label>

                                        <label>
                                            <button class="submit ttm-btn ttm-btn-size-md ttm-btn-shape-rounded ttm-btn-style-fill ttm-btn-color-skincolor" type="submit">Submit</button>
                                        </label>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

