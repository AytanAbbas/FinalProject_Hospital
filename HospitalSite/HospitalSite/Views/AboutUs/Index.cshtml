
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model  VmAbout
<main>
    <partial name="_BannerPartial" model="Model.Banner" />
    <section class=" introduction-section clearfix">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-xs-12">
                    <div class="introduction-content ml_100">
                        <div class="content-picture" style="background-image: url(/images/about/col-bgimage-10.png);">
                            <div class="content-inner"></div>
                        </div>
                        <div class="layer-content">
                            <div class="pl-100 pt-35 ">
                                <div class="section-title">
                                    <div class="title-header">
                                        <h5>About Us</h5>
                                        <h2 class="title">We Employ The Latest Research Technology & Company</h2>
                                    </div>
                                    <p>@Model.Setting.About</p>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <ul class="content-list">
                                            <li>
                                                <i class="fa fa-arrow-circle-right"></i>
                                                <div class="ttm-list-li-content">Engage - marketing automation</div>
                                            </li>
                                            <li>
                                                <i class="fa fa-arrow-circle-right"></i>
                                                <div class="ttm-list-li-content">Learn from customer feedback</div>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-sm-6">
                                        <ul class=" content-list">
                                            <li>
                                                <i class="fa fa-arrow-circle-right"></i>
                                                <div class="ttm-list-li-content">Acquire live chat enables sales </div>
                                            </li>
                                            <li>
                                                <i class="fa fa-arrow-circle-right"></i>
                                                <div class="ttm-list-li-content">Customer support</div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="d-sm-flex align-items-center pt-40">
                                    <h6 class="mr-2">Call to ask any question.</h6>
                                    <div class="d-flex">
                                        <h5>@Model.Setting.Phone1</h5><span class="pl-5 pr-5">or</span>
                                        <h5>@Model.Setting.Phone2</h5>
                                    </div>
                                </div>

                                <div class="mt-20">
                                    <div class="featured-icon-box icon-align-before-content">
                                        <div class="featured-icon">
                                            <div class="img-content">
                                                <img src="~/images/about/@Model.Setting.Signature" alt="ttm_single_image-wrapper">
                                            </div>
                                        </div>
                                        <div class="featured-content pl-30">
                                            <div class="featured-title">
                                                <h5>@Model.Setting.Foundername</h5>
                                            </div>
                                            <div class="featured-desc">
                                                <p>@Model.Setting.Founderposition</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-10">
                    <div class="ttm_single_image-wrapper text-right ">
                        <img class="img-fluid" src="images/about/@Model.Setting.AboutImage" alt="">
                    </div>
                </div>
            </div>
        </div>

    </section>

    <section class="ttm-row services-section ttm-bgcolor-skincolor bg-img8 ttm-bg ttm-bgimage-yes clearfix">
        <div class="ttm-row-wrapper-bg-layer ttm-bg-layer"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-9 m-auto">
                    <div class="section-title with-sep title-style-center_text">
                        <div class="title-header">
                            <h5>OUR SPECIALTIES</h5>
                            <h2 class="title">Why Choose Us</h2>
                        </div>
                        <div class="title-desc">@Model.Choose.About</div>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.ChooseUs)
                {
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <div class="featured-icon-box icon-align-top-content style5">
                            <div class="featured-icon">
                                <div class="ttm-icon ttm-icon_element-onlytxt ttm-icon_element-color-skincolor ttm-icon_element-size-lg ttm-icon_element-style-round">
                                    <i class="@item.Icon"></i>
                                </div>
                            </div>
                            <div class="featured-content">
                                <div class="featured-title">
                                    <h5>High<br>@item.Title</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="mt-25 pb-55 res-991-mt-15 res-991-pb-0 text-center">
                        <strong>Laboratories Used For Scientific Research <u><a href="#"> Take Many Forms.</a></u></strong>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="ttm-row fid-section mt_80 res-991-mt-0 z-index-1 clearfix">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ttm-bg ttm-col-bgcolor-yes ttm-bgcolor-white">
                        <div class="ttm-col-wrapper-bg-layer ttm-bg-layer" style="background-image: url(/images/about/col-bgimage-10.png);"></div>
                        <div class="layer-content">
                            <div class="row">
                                <div class="col-lg-3 col-md-6 col-sm-6">
                                    <div class="ttm-fid inside ttm-fid-with-icon ttm-fid-view-lefticon style2">
                                        <div class="ttm-fid-icon-wrapper ttm-textcolor-skincolor">
                                            <i class="fas fa-trophy"></i>
                                        </div>
                                        <div class="ttm-fid-contents">
                                            <h4 class="ttm-fid-inner">
                                                <span data-appear-animation="animateDigits" data-from="0" data-to="143" data-interval="15" data-before="" data-before-style="sup" data-after="" data-after-style="sub" class="numinate">
                                                    143
                                                </span>
                                                <sub>+</sub>
                                            </h4>
                                            <h3 class="ttm-fid-title">Awards Winning</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6 col-sm-6">
                                    <div class="ttm-fid inside ttm-fid-with-icon ttm-fid-view-lefticon style2">
                                        <div class="ttm-fid-icon-wrapper ttm-textcolor-skincolor">
                                            <i class="fas fa-microscope"></i>
                                        </div>
                                        <div class="ttm-fid-contents">
                                            <h4 class="ttm-fid-inner">
                                                <span data-appear-animation="animateDigits" data-from="0" data-to="780" data-interval="15" data-before="" data-before-style="sup" data-after="" data-after-style="sub" class="numinate">
                                                    780
                                                </span>
                                                <sub>+</sub>
                                            </h4>
                                            <h3 class="ttm-fid-title">Our Equipments</h3>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-3 col-md-6 col-sm-6">
                                    <div class="ttm-fid inside ttm-fid-with-icon ttm-fid-view-lefticon style2">
                                        <div class="ttm-fid-icon-wrapper ttm-textcolor-skincolor">
                                            <i class="fas fa-search"></i>
                                        </div>
                                        <div class="ttm-fid-contents">
                                            <h4 class="ttm-fid-inner">
                                                <span data-appear-animation="animateDigits" data-from="0" data-to="675" data-interval="15" data-before="" data-before-style="sup" data-after="" data-after-style="sub" class="numinate">
                                                    675
                                                </span>
                                                <sub>+</sub>
                                            </h4>
                                            <h3 class="ttm-fid-title">Complete Cases</h3>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-3 col-md-6 col-sm-6">
                                    <div class="ttm-fid inside ttm-fid-with-icon ttm-fid-view-lefticon style2">
                                        <div class="ttm-fid-icon-wrapper ttm-textcolor-skincolor">
                                            <i class="fas fa-headset"></i>
                                        </div>
                                        <div class="ttm-fid-contents">
                                            <h4 class="ttm-fid-inner">
                                                <span data-appear-animation="animateDigits" data-from="0" data-to="457" data-interval="15" data-before="" data-before-style="sup" data-after="" data-after-style="sub" class="numinate">
                                                    457
                                                </span>
                                                <sub>+</sub>
                                            </h4>
                                            <h3 class="ttm-fid-title">Industry Expertise</h3>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class=" procedure-section mt_100 clearfix" style="background-image: url(/Uploads/@Model.WorkProcess.BgImage);">
        <div class="procedure-layer"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-9 m-auto">
                    <div class="section-title ">
                        <div class="title-header">
                            <h5>OUR SERVICES</h5>
                            <h2 class="title">Our Working Process</h2>
                        </div>
                        <div class="title-desc">@Model.WorkProcess.About</div>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.ProcessPlans)
                {
                    <div class="col-md-4">
                        <div class="featured-icon-box icon-align-top-content text-center style4">
                            <div class="featured-icon">
                                <div class="ttm-icon ttm-icon_element-fill ttm-icon_element-color-white ttm-icon_element-size-md ttm-icon_element-style-rounded">
                                    <i class="@item.Icon"></i>
                                    <span class="fea-number">@item.Number</span>
                                </div>
                            </div>
                            <div class="featured-content">
                                <div class="featured-title">
                                    <h5>@item.Title</h5>
                                </div>
                                <div class="featured-desc">
                                    <p>@item.Content</p>
                                </div>
                            </div>
                            <div class="arrow">
                                <img src="~/Uploads/@item.ArrowImage" alt="">
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>

    <section class=" team-section clearfix">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-10 m-auto">
                    <div class="section-title">
                        <div class="title-header">
                            <h5>OUR SPECIALTIES</h5>
                            <h2 class="title">Led by Passionate Experts</h2>
                        </div>
                        <div class="title-desc">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ev</div>
                    </div>
                </div>
            </div>
            <div class="row slick_slider" data-slick='{"slidesToShow": 4, "slidesToScroll": 1, "arrows":false, "autoplay":false, "infinite":true, "responsive": [{"breakpoint":991,"settings":{"slidesToShow": 3}}, {"breakpoint":678,"settings":{"slidesToShow": 2}}, {"breakpoint":460,"settings":{"slidesToShow": 1}}]}'>
                @foreach (var item in Model.Teams)
                {
                    <div class="ttm-box-col-wrapper col-lg-4">
                        <div class="featured-imagebox featured-imagebox-team">
                            <div class="ttm-team-box-view-overlay">
                                <div class="featured-iconbox ttm-media-link">
                                    <div class="media-block">
                                        <a asp-controller="Team" asp-action="Detail" asp-route-id="@item.Id" class="media-btn"><i style=" line-height: 2.5;" class="fal fa-plus"></i></a>
                                        <ul class="social-icons list-inline">
                                            @foreach (var social in item.TeamSocials)
                                            {
                                                <li class="social-facebook"><a><i class="@social.Icon"></i></a></li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                                <div class="featured-thumbnail">
                                    <img class="img-fluid" src="~/Uploads/@item.Image" alt="image">
                                </div>
                            </div>
                            <div class="featured-content featured-content-team">
                                <div class="featured-title">
                                    <h5><a asp-controller="Team" asp-action="Detail" asp-route-Id="@item.Id">@item.Fullname</a></h5>
                                </div>
                                <div class="team-position">@item.Position</div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>

</main>
