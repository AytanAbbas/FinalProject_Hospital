
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VmTeam

<main>
    <partial name="_BannerPartial" model="Model.Banner" />

    <section class="single-team clearfix">
        <div class="team-member-single">
            <div class="container">
                <div class=" row">
                    <div class="col-lg-5 col-md-5">
                        <div class="featured-item ">
                            <div class="member-image">
                                <img class="img-fluid" src="~/Uploads/@Model.TeamDetail.Image">
                            </div>
                            <div class="member-phone">
                                <h5>
                                    Call Us: @Model.TeamDetail.Phone
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class=" team-wrapper col-xs-12 col-sm-12 col-md-7 col-lg-7">
                        <div class="team-info shadow-box">
                            <div class="team-info-list">
                                <h2 class="team-info-title">Personal Information</h2>
                                <div class="ttm-team-details-wrapper">
                                    <ul class="ttm-team-details-list mb-20 clearfix">
                                        <li>
                                            <div class="ttm-team-list-title">
                                                <h5>Doctor Name: </h5>
                                            </div>
                                            <div class="ttm-team-list-value">@Model.TeamDetail.Fullname</div>
                                        </li>
                                        <li>
                                            <div class="ttm-team-list-title">
                                                <h5>Primary Specialty: </h5>
                                            </div>
                                            <div class="ttm-team-list-value">@Model.TeamDetail.Position</div>
                                        </li>
                                        <li>
                                            <div class="ttm-team-list-title">
                                                <h5>Experiance: </h5>
                                            </div>
                                            <div class="ttm-team-list-value">@Model.TeamDetail.Experience</div>
                                        </li>
                                        <li>
                                            <div class="ttm-team-list-title">
                                                <h5>Email: </h5>
                                            </div>
                                            <div class="ttm-team-list-value">@Model.TeamDetail.Email</div>
                                        </li>
                                        <li>
                                            <div class="ttm-team-list-title">
                                                <h5>Cabine No: </h5>
                                            </div>
                                            <div class="ttm-team-list-value">@Model.TeamDetail.CabinNumber</div>
                                        </li>
                                        <li>
                                            <div class="ttm-team-list-title">
                                                <h5><i style=" font-size: 21px; color: #3368c6;" class="fa fa-calendar-check"></i> </h5>
                                            </div>
                                            <div class="ttm-team-list-value"><a style="color: #3368c6; cursor: pointer; " class="sweet">Schedule</a></div>
                                        </li>
                                    </ul>


                                    <h2 class="team-info-title">Education & Training</h2>
                                    <ul class="ttm-team-details-list clearfix">
                                        <li>
                                            <div class="ttm-team-list-title">
                                                <h5>Medical Education: </h5>
                                            </div>
                                            <div class="ttm-team-list-value">@Model.TeamDetail.University.Medical</div>
                                        </li>
                                        <li>
                                            <div class="ttm-team-list-title">
                                                <h5>Residency: </h5>
                                            </div>
                                            <div class="ttm-team-list-value">@Model.TeamDetail.University.Residency</div>
                                        </li>
                                        <li>
                                            <div class="ttm-team-list-title">
                                                <h5>Certifications: </h5>
                                            </div>
                                            <div class="ttm-team-list-value">@Model.TeamDetail.Certification</div>
                                        </li>
                                        <li>
                                            <div class="ttm-team-list-title">
                                                <h5>Practice Areas: </h5>
                                            </div>
                                            <div class="ttm-team-list-value">@Model.TeamDetail.PracticeArea</div>
                                        </li>
                                    </ul>
                                </div>

                                <div class="team-social">
                                    <ul class="social-icons">
                                        @foreach (var item in Model.TeamDetail.TeamSocials)
                                        {
                                            <li class="social-facebook">
                                                <a class="tooltip-top" href="https://@item.Link/"><i class="@item.Icon" style=" line-height: 2.5;"></i></a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="team-biography">
                            <div class="biography mt-40">
                                <div class="section-title">
                                    <div class="title-header">
                                        <h2 class="title">Biography</h2>
                                    </div>
                                </div>
                                <p>
                                    @Model.TeamDetail.Biography
                                </p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="experience clearfix" style="background-image: url(images/team/row-bgimage-5.png);">
        <div class="experience-layer"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <div class="title-header">
                            <h2 class="title">Work Experience & Skills</h2>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="mt-15 pr-40 res-991-pr-0">
                     
                        <div class="ttm-progress-bar" data-percent="88%">
                            <div class="progressbar-title">Sample Preparation</div>
                            <div class="progress-bar-inner">
                                <div class="progress-bar progress-bar-color-bar_skincolor"></div>
                            </div>
                            <div class="progress-bar-percent" data-percentage="88">88%</div>
                        </div>
                        <div class="ttm-progress-bar clearfix" data-percent="96%">
                            <div class="progressbar-title">Environmental Testing</div>
                            <div class="progress-bar-inner">
                                <div class="progress-bar progress-bar-color-bar_skincolor"></div>
                            </div>
                            <div class="progress-bar-percent" data-percentage="96">96%</div>
                        </div>
                        <div class="ttm-progress-bar clearfix" data-percent="90%">
                            <div class="progressbar-title">Advanced Microscopy</div>
                            <div class="progress-bar-inner">
                                <div class="progress-bar progress-bar-color-bar_skincolor"></div>
                            </div>
                            <div class="progress-bar-percent" data-percentage="90">90%</div>
                        </div>
                        <div class="ttm-progress-bar clearfix" data-percent="96%">
                            <div class="progressbar-title">Environmental Testing</div>
                            <div class="progress-bar-inner">
                                <div class="progress-bar progress-bar-color-bar_skincolor"></div>
                            </div>
                            <div class="progress-bar-percent" data-percentage="96">96%</div>
                        </div>
                        <div class="ttm-progress-bar clearfix" data-percent="90%">
                            <div class="progressbar-title">Advanced Microscopy</div>
                            <div class="progress-bar-inner">
                                <div class="progress-bar progress-bar-color-bar_skincolor"></div>
                            </div>
                            <div class="progress-bar-percent" data-percentage="90">90%</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="res-991-pt-30">
                        @foreach (var item in Model.TeamDetail.TeamExperiences)
                        {
                            <div class="featured-icon-box icon-align-before-content icon-ver_align-top mt-15">
                                <div class="featured-icon">
                                    <div class="ttm-icon ttm-icon_element-onlytxt ttm-icon_element-color-skincolor ttm-icon_element-size-md">
                                        <i class="@item.WorkExperience.Icon"></i>
                                    </div>
                                </div>
                                <div class="featured-content">
                                    <div class="featured-title">
                                        <h5>@item.WorkExperience.Title</h5>
                                    </div>
                                    <div class="featured-desc">
                                        <p>@item.WorkExperience.About</p>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="cooperation clearfix">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="section-title">
                        <div class="title-header">
                            <h2 class="title">Doctors <br>Achievements</h2>
                        </div>
                    </div>
                    <p>
                        Contaryb my text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.ap into e was popularireeMaker including versions of Lorem Ipsum.adipisci velit, sed quia non
                        numquam.
                    </p>
                </div>
                <div class="col-lg-8">
                    <div class="row">
                        @foreach (var item in Model.Achievements)
                        {
                            <div class="col-sm-4 wrapper text-center">
                                <div class="border-bottom pb-10">
                                    <img class="img-fluid" src="~/images/team/@item.Image" alt="image">
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
  